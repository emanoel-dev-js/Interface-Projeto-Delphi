  Classes,
  Graphics,
  Controls,
  Forms,
  Dialogs,
  StdCtrls,
  ExtCtrls,
  Buttons,
  IBDatabase,
  UniCliente,
  DB,
  UniFornecedores,
  UniProdutos,
  UnitCaixa,
  UniVendas,
  jpeg,
  pngimage,
  UNI_ITENS_VENDA;


type
  TViewPrincipal = class(TForm)
    pnlTopo: TPanel;
    pnlMenu: TPanel;
    pnlBackPrincipal: TPanel;
    pnlRodaPe: TPanel;
    pnlConteudo: TPanel;
    pnlLogo: TPanel;
    pnlLineLogo: TPanel;
    pnlConteudoLogo: TPanel;
    lblTituloEmpresa: TLabel;
    lblDescriçaoEmpresa: TLabel;
    pnlVersao: TPanel;
    lblVersaoTitulo: TLabel;
    lblVersao: TLabel;
    pnlUsuario: TPanel;
    pnlLineUsuario: TPanel;
    pnlImgUsuario: TPanel;
    imgUsuario: TImage;
    pnlDadosUsuarios: TPanel;
    lblUsuario: TLabel;
    lblPerfil: TLabel;
    pnlLicenciado: TPanel;
    pnlLineRodape: TPanel;
    pnlConteudoLicença: TPanel;
    lblLicenciado1: TLabel;
    lblNomeEmpresa: TLabel;
    pnlSair: TPanel;
    pnlShapeMenu: TPanel;
    ShapeMenu: TShape;
    pnlDadosMenu: TPanel;
    btnClientes: TSpeedButton;
    btnCaixa: TSpeedButton;
    btnFornecedores: TSpeedButton;
    btnProdutos: TSpeedButton;
    btnConfiguraçoes: TSpeedButton;
    btnSair: TSpeedButton;
    IbBanco: TIBDatabase;
    TrBanco: TIBTransaction;
    btnVENDAS: TSpeedButton;
    imgConteudo: TImage;
    btnITENS_VENDA: TSpeedButton;
 // procedure FecharClick(Sender: TObject);
    procedure btnSairClick(Sender: TObject);
    procedure btnClientesClick(Sender: TObject);
    procedure btnCaixaClick(Sender: TObject);
    procedure btnFornecedoresClick(Sender: TObject);
    procedure btnProdutosClick(Sender: TObject);
    procedure btnConfiguraçoesClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure lblTituloEmpresaMouseEnter(Sender: TObject);
    procedure pnlRodaPeMouseLeave(Sender: TObject);
    procedure lblTituloEmpresaMouseLeave(Sender: TObject);
    procedure lblDescriçaoEmpresaMouseEnter(Sender: TObject);
    procedure lblDescriçaoEmpresaMouseLeave(Sender: TObject);
